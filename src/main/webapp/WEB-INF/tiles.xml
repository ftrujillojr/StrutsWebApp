<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
   "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
   "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <definition name="baseLayout" template="/tiles_example/baseLayout.jsp">
        <put-attribute name="title"  value="Template"/>
        <put-attribute name="banner" value="/tiles_example/banner.jsp"/>
        <put-attribute name="menu"   value="/tiles_example/menu.jsp"/>
        <put-attribute name="body"   value="/tiles_example/body.jsp"/>
        <put-attribute name="footer"   value="/tiles_example/footer.jsp"/>
    </definition>
   
    <definition name="tiger" extends="baseLayout">
        <put-attribute name="title"  value="Tiger"/>
        <put-attribute name="body"   value="/tiles_example/tiger.jsp"/>      
    </definition>

    <definition name="lion" extends="baseLayout">
        <put-attribute name="title"  value="Lion"/>
        <put-attribute name="body"   value="/tiles_example/lion.jsp"/>      
    </definition>
    
    
    <!-- 
          Make sure template jsp file has SAME attribute names your put-attributes
          Also, from struts.xml namespace for action.  In this case namespace => /, so
          all template and values MUST be relative to namespace.  
    -->
    <definition name="bootstrapLayout" template="/tiles/bootstrapLayout.jsp">
        <put-attribute name="title"  value="Template"/>
        <put-attribute name="topLayout" value="/tiles/topLayout.jsp"/>
        <put-attribute name="leftLayout"   value="/tiles/leftLayout.jsp"/>
        <put-attribute name="rightLayout"   value="/tiles/rightLayout.jsp"/>
        <put-attribute name="bottomLayout"   value="/tiles/bottomLayout.jsp"/>
    </definition>
   
    <definition name="testLayout" extends="bootstrapLayout">
        <put-attribute name="title"  value="Test Layout"/>
    </definition>
    
    <definition name="home" extends="bootstrapLayout">
        <put-attribute name="title"  value="Home (tiles)"/>
        <put-attribute name="leftLayout"   value="/partials/leftNav.jsp"/>
        <put-attribute name="rightLayout"   value="/home.jsp"/>
    </definition>
   
</tiles-definitions>
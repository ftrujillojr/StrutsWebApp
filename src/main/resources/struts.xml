<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

 <!--
https://struts.apache.org/docs/result-types.html

chain, freemarker, dispatcher, httpheader, redirect, redirectAction, stream, xslt, tiles, json    

<action name="home" method="noAction" class="org.yourorg.yourapp.controllers.NoAction">
-->
 
<struts>
    <include file="my_common_default.xml"></include>
    <include file="ns2.xml"></include>
    
    <package name="my-top-pkg" namespace="/" extends="my-common-default">
        
        <action name="homeJson**" method="restDispatch" class="org.yourorg.yourapp.controllers.NoActionController">
            <interceptor-ref name="myJsonStack"/>
            <result name="json" type="json">
                <param name="root">jsonResponse</param>
                <param name="excludeNullProperties">true</param>  
                <param name="contentType">application/json</param> 
            </result>
        </action>
        
        <action name="home" method="noAction" class="org.yourorg.yourapp.controllers.NoActionController">
            <result name="success" type="tiles">home</result>
        </action>
        
        <action name="">
            <result name="success" type="redirect">/home</result>
        </action>
        
    </package>
</struts>        
    